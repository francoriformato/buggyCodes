<div class="container" id="profile-cards">

<div class="row mb-3">
<div class="col-lg-4">

  <div class="card mb-3">
    <div class="card-body text-center shadow"><img class="rounded-circle mb-3 mt-4" src=<%=userinfo.image %> width="160" height="160">
      <div class="mb-3"><button class="btn btn-primary btn-sm" type="submit"><a href="/auth/logout" style="color:#ffffff">Logout</a></button></div>
    </div>
  </div>


  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="text-primary fw-bold m-0" style="cursor: pointer;" onclick="ajax_loadRandom()">Load (another) random user's motto</h6>
    </div>

    <div class="card-body">

      <div class="row">		
                 <div class="col">
                    <div class="mb-3">
                      <h6> Someone said: "<b id="moreMotto"><%=anotherMotto[0].motto %></b>" from <b id="moreCountry"> <%=anotherMotto[0].country %> </b> </h6></div>
                  </div>
             </div>
	</div>
             </div>
</div>
  <div class="col-lg-8">
    <div class="row">

      <div class="col">

        <div class="card shadow mb-3">

          <div class="card-header py-3">
            <p class="text-primary m-0 fw-bold">User Settings</p>
          </div>

          <div class="card-body">

            

              <div class="row">

                <form action="/add/motto" method="POST">
                  <div class="col">
                    <div class="mb-3">
                      <label class="form-label" for="motto"><strong><%=userinfo.firstName %>'s motto</strong></label>
                      <input class="form-control" type="text" id="motto" placeholder="<%=userinfo.motto %>" name="motto"></div>
                  </div>
              </div>
            <div class="mb-3"><input type="submit" value="Update Motto" class="btn btn-primary btn-sm">
              </form>
		</div>

	       <form action="/add/country" method="POST">
                <div class="col">
                  <div class="mb-3">
		<label class="form-label" for="country"><strong>Country</strong></label>
		<input class="form-control" type="text" id="country" placeholder=<%=userinfo.country %> name="country"></div>
                </div>
          
              <div class="mb-3"><input type="submit" value="Update Country" class="btn btn-primary btn-sm">
		</form>
 			</div>
		</div>
          </div>

        </div>

        <div class="card shadow">
          <div class="card-header py-3">
            <p class="text-primary m-0 fw-bold">Avatar Settings</p>
          </div>

          <div class="card-body">

            <div>
              <h6 style="font-size: 0.875rem">Here you can choose a new avatar, shown in game.<br> Maybe you will unlock new ones while playing!</h6>

            <div class="user">
              <a href="/avatar?avid=av1"> <img class="userIMG rounded-circle border border-white" id="avatar1" src="img/av1.png" alt="User Profile Picture"> </a>
            </div>

            <div class="user">
              <a href="/avatar?avid=av2"><img class="userIMG rounded-circle border border-white" id="avatar2" src="img/av2.png" alt="User Profile Picture"></a>
            </div>

              <div class="user">
               <a href="/avatar?avid=av3"><img class="userIMG rounded-circle border border-white" id="avatar3" src="img/av3.png" alt="User Profile Picture"></a>
              </div>

              <div class="user">
                <a href="/avatar?avid=av4"><img class="userIMG rounded-circle border border-white" id="avatar4" src="img/av4.png" alt="User Profile Picture"></a>
              </div>

  	      <div class="user">
                <a href="/avatar?avid=av5" class="hiddencontent" id="avatar5link"><img class="userIMG rounded-circle border border-white" id="avatar5" src="img/av5.png" alt="User Profile Picture"></a>
              </div>

	      <div class="user">
                <a href="/avatar?avid=av6" class="hiddencontent" id="avatar6link"><img class="userIMG rounded-circle border border-white" id="avatar6" src="img/av6.png" alt="User Profile Picture"></a>
              </div>

	       <div class="user">
                <a href="/avatar?avid=av7" class="hiddencontent" id="avatar7link"><img class="userIMG rounded-circle border border-white" id="avatar7" src="img/av7.png" alt="User Profile Picture"></a>
              </div>

	        <div class="mb-3"><button class="btn btn-primary btn-sm" type="submit"><a href="/add/level" style="color:#ffffff">For testing purpose, click here to upgrade user level +1</a></button></div>
          </div>


        </div>
      </div>
    </div>
  </div>
